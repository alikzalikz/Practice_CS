@using Packt.Shared;
@model IEnumerable<Product>
@{
    string title = "Products That Cost More Than " + ViewData["MaxPrice"];
    ViewData["Title"] = title;
}
<h2>@title</h2>
@if (Model is null)
{
    <div>No roducts found.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Supplier's Company Name</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItam => p.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => p.Supplier.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => p.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => p.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => p.UnitsInStock)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
